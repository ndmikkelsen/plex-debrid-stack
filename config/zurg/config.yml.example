# Zurg Configuration
# Get your Real-Debrid API token from: https://real-debrid.com/apitoken

# =============================================================================
# REQUIRED: Set your Real-Debrid API token
# =============================================================================
token: YOUR_REAL_DEBRID_API_TOKEN_HERE

# =============================================================================
# Server Settings
# =============================================================================
host: "0.0.0.0"
port: 9999

# =============================================================================
# Directory Structure Configuration
# This determines how your media appears in the mount
# =============================================================================
directories:
  # Movies organized for Radarr
  movies:
    group: media
    group_order: 1
    filters:
      - regex: /movies?/i
      - regex: /films?/i
      - has_episodes: false

  # TV Shows organized for Sonarr
  shows:
    group: media
    group_order: 2
    filters:
      - regex: /tv|shows?|series/i
      - has_episodes: true

  # Anime (can be picked up by Sonarr with proper naming)
  anime:
    group: media
    group_order: 3
    filters:
      - regex: /anime/i

# =============================================================================
# Cache Settings
# =============================================================================
# How often to refresh the library from Real-Debrid (in seconds)
network_buffer_size: 4194304
retain_folder_name_extension: false
retain_rd_torrent_name: false
expose_no_stream_downloads: true
auto_delete_rar_torrents: true
use_download_cache: true

# =============================================================================
# Advanced Settings
# =============================================================================
# Concurrent downloads for cache
concurrent_workers: 32

# API request rate limiting
api_rate_limit_per_minute: 250

# Download retry settings
download_retries: 3
