# Zurg Configuration
# Documentation: https://github.com/debridmediamanager/zurg-testing
#
# Copy this file to config.yml:
#   cp config.yml.example config.yml

zurg: v1

# Get your token from: https://real-debrid.com/apitoken
token: "YOUR_REAL_DEBRID_API_TOKEN_HERE"

host: "0.0.0.0"
port: 9999

# Directory Structure
# Sonarr handles: TV shows + Anime (anything with episodes)
# Radarr handles: Movies (everything else)
# The 'group_order' determines priority - lower numbers are checked first
directories:
  shows:
    group: media
    group_order: 10
    filters:
      - has_episodes: true

  movies:
    group: media
    group_order: 100
    only_show_the_biggest_file: true
    filters:
      - regex: /.*/

# Repair Settings - Auto-fix broken/expired download links
enable_repair: true
check_for_changes_every_secs: 60

# Performance & Cache Settings
network_buffer_size: 4194304
retain_folder_name_extension: false
retain_rd_torrent_name: false
expose_no_stream_downloads: true
auto_delete_rar_torrents: true
use_download_cache: true

# Advanced Settings
concurrent_workers: 32
api_rate_limit_per_minute: 250
download_retries: 3
